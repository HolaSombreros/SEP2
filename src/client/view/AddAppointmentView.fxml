<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="450.0" prefWidth="450.0" spacing="20.0" stylesheets="@../../util/style.css" userData="Book New Appointment" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.view.AddAppointmentViewController">
    <children>
        <Label styleClass="header" text="Book a new appointment">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
      <VBox alignment="CENTER" maxWidth="1.7976931348623157E308" spacing="15.0">
         <children>
            <VBox maxWidth="250.0">
               <children>
                  <Label text="Date">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <DatePicker fx:id="datePicker" maxWidth="1.7976931348623157E308" minHeight="30.0" />
               </children>
            </VBox>
                <VBox maxWidth="250.0" spacing="3.0">
                    <children>
                        <Label text="Time Interval">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <ChoiceBox fx:id="timeIntervalChoiceBox" maxWidth="1.7976931348623157E308" minHeight="30.0" />
                    </children>
                </VBox>
                <VBox maxWidth="250.0" spacing="3.0">
                    <children>
                        <Label text="Type">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <ChoiceBox fx:id="typeChoiceBox" maxWidth="1.7976931348623157E308" minHeight="30.0" />
                    </children>
                </VBox>
                <Label fx:id="errorLabel" styleClass="error" text="Error label">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <Button defaultButton="true" maxWidth="250.0" mnemonicParsing="false" onAction="#createAppointment" text="Book Appointment">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
                <Button maxWidth="250.0" mnemonicParsing="false" onAction="#cancel" text="Cancel">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
         </children>
      </VBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
