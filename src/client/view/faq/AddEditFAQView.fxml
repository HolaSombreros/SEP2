<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" spacing="20.0" userData="Add FAQ" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.view.faq.AddFAQViewController">
    <children>
        <Label text="Add/Edit FAQ">
            <font>
                <Font name="System Bold" size="36.0" />
            </font>
        </Label>
