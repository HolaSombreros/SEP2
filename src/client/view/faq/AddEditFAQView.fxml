        <HBox alignment="CENTER" prefHeight="20.0" prefWidth="600.0" spacing="300.0">
            <children>
                <Button mnemonicParsing="false" onAction="#addEdit" text="Add / Edit">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
                <Button mnemonicParsing="false" onAction="#back" text="Back">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
