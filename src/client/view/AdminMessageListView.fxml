<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="525.0" prefWidth="610.0" spacing="15.0" stylesheets="@../../util/style.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.view.AdminMessageListViewController" userData="List of patient chats">
   <children>
      <Label styleClass="header" text="Chat Logs">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </Label>
      <TableView fx:id="table" maxHeight="300.0" maxWidth="-Infinity" prefWidth="445.0">
        <columns>
          <TableColumn fx:id="cprColumn" editable="false" maxWidth="1.7976931348623157E308" minWidth="-Infinity" prefWidth="90.0" resizable="false" text="Patient CPR" />
          <TableColumn fx:id="nameColumn" editable="false" maxWidth="1.7976931348623157E308" minWidth="-Infinity" prefWidth="150.0" resizable="false" text="Patient Name" />
            <TableColumn fx:id="dateColumn" editable="false" maxWidth="1.7976931348623157E308" minWidth="-Infinity" prefWidth="90.0" resizable="false" text="Send Date" />
            <TableColumn fx:id="statusColumn" editable="false" maxWidth="1.7976931348623157E308" minWidth="-Infinity" prefWidth="90.0" resizable="false" text="Status" />
        </columns>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </TableView>
      <HBox alignment="CENTER_RIGHT" maxWidth="445.0">
         <children>
            <CheckBox fx:id="showReadMessages" mnemonicParsing="false" text="Show read messages" onAction="#filterChatLogs">
               <font>
                  <Font size="14.0" />
               </font>
            </CheckBox>
         </children>
         <VBox.margin>
            <Insets top="-10.0" />
         </VBox.margin>
      </HBox>
      <Label fx:id="errorLabel" styleClass="error" text="Label" />
      <HBox maxWidth="445.0">
         <children>
            <Button mnemonicParsing="false" onAction="#enterChat" text="Enter Selected Chat" />
            <Label maxWidth="1.7976931348623157E308" text="Hidden label" visible="false" HBox.hgrow="ALWAYS" />
            <Button mnemonicParsing="false" onAction="#back" text="Go Back" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
